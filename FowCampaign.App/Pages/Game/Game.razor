@using System.Net.Http.Json
@using System.Text.Json
@using FowCampaign.App.DTO
@using FowCampaign.App.Layout
@using FowCampaign.App.Shared
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop

@page "/game/{Id:int}"

@attribute [Authorize]

@layout HomeLayout


@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavigationManager




<PaperSheet @ref="_paper">
    
    @if (_isLoading)
    {
        <div style="text-align:center; padding-top: 100px; font-family: 'Courier New';">
            <h3>DECRYPTING BATTLE PLANS...</h3>
            <p>Loading Campaign #@Id</p>
        </div>
    }
    else if (_loadError)
    {
        <div style="color:red; text-align:center; padding-top: 50px;">
            <h3>MISSION ABORTED</h3>
            <p>Could not load campaign data. Server may be offline.</p>
            <button class="btn-leave" style="width:auto; padding: 10px 20px;" @onclick='() => NavigationManager.NavigateTo("/home")'>RETURN TO BASE</button>
        </div>
    }
    else
    {
        @if (_state != null)
        {
            <div class="turn-banner" style="background-color: @GetFactionColor(_state.CurrentTurnFaction);">
                TURN @(_state.TurnNumber): @(_state.CurrentTurnFaction.ToUpper())
            </div>
        }

        <div class="game-layout">
            
            <div style="position: relative;">
                <div class="turn-header">
                    <span>OP: @_gameData.Name</span>
                    <span>Playing As: <span style="color:yellow;">@_gameData.MyFactionName</span></span>
                </div>

                <div class="canvas-wrapper" 
                     style=" position: relative; width: fit-content; margin: 0 auto; display: block;"
                     @onmousemove="HandleWrapperMouseMove" 
                     @onmouseup="HandleWrapperMouseUp">
                    
                    <canvas id="gameCanvas" style="display: block; cursor: crosshair;"></canvas>

                    @if (_state != null)
                    {
                        @foreach (var unit in _state.Units)
                        {
                            var def = _state.UnitDefinitions.FirstOrDefault(d => d.Id == unit.DefinitionId);
                            var factionColor = GetFactionColor(unit.FactionName);
                            
                            var isMyUnit = unit.FactionName == _gameData.MyFactionName;
                            var isMyTurn = _state.CurrentTurnFaction == _gameData.MyFactionName;
                            var canDrag = isMyUnit && isMyTurn;
                            
                            var stateClass = canDrag ? "" : "unit-locked"; 
                            
                            var pointerClass = (_draggingUnit != null) ? "pointer-events-none" : "";

                            if (def != null)
                            {
                                <div class="map-unit @stateClass @pointerClass"
                                     style="left: @(unit.X)px; top: @(unit.Y)px; border: 2px solid @factionColor; box-shadow: 0 0 5px @factionColor;"
                                     @onmousedown="() => StartDrag(unit)"
                                     @onmousedown:stopPropagation="true">
                                     
                                    <img src="@def.ImageBase64" style="width:100%; height:100%; object-fit:contain;" title="@def.Name" />
                                </div>
                            }
                        }
                    }
                </div>
            </div>

            <div class="intel-sidebar">
                <h4 style="margin-top:0; border-bottom: 2px solid #333;">ORDERS</h4>
                
                <p><strong>Commanding:</strong> @_gameData?.MyFactionName</p>
                
                @if (_state?.CurrentTurnFaction == _gameData?.MyFactionName)
                {
                    <div class="status-panel-active">
                        <strong>STATUS:</strong> Awaiting Orders. <br/>
                        Move units and confirm.
                    </div>
                    
                    <button class="btn-turn btn-green" @onclick="SubmitTurn">
                        ✔ END TURN
                    </button>
                }
                else
                {
                    <div class="status-panel-waiting">
                        <strong>STATUS:</strong> Enemy Moving. <br/>
                        Wait for @_state?.CurrentTurnFaction to finish.
                    </div>
                    
                    <button class="btn-turn btn-grey" disabled>
                        WAITING...
                    </button>
                }

                <hr style="border-top:1px dashed #666;" />
                <button class="btn-leave" @onclick='() => NavigationManager.NavigateTo("/home")'>
                    LEAVE WAR ROOM
                </button>
            </div>

        </div>
    }
</PaperSheet>

@code {
    [Parameter] public int Id { get; set; }
    private PaperSheet _paper;
    private LoadGameDataDto _gameData; 
    private GameStateDto _state;
    private UnitDto _draggingUnit;
    
    private bool _isLoading = true;
    private bool _loadError = false;
    private bool _mapRendered = false;

    private string GetFactionColor(string factionName) => 
        _state?.Factions.FirstOrDefault(f => f.Name == factionName)?.Color ?? "#000";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _gameData = await Http.GetFromJsonAsync<LoadGameDataDto>($"api/Campaign/{Id}");
            
            if (!string.IsNullOrEmpty(_gameData.GameStateJson))
            {
                _state = JsonSerializer.Deserialize<GameStateDto>(_gameData.GameStateJson);

                if (string.IsNullOrEmpty(_state.CurrentTurnFaction))
                {
                    _state.CurrentTurnFaction = _state.Factions.FirstOrDefault()?.Name ?? "Axis";
                    _state.TurnNumber = 1;
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading game: {ex.Message}");
            _loadError = true;
        }
        finally
        {
            _isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!_isLoading && !_loadError && !_mapRendered && _gameData != null)
        {
            _mapRendered = true; 

            try 
            {
                await JS.InvokeVoidAsync("mapTools.initMap", "gameCanvas", _gameData.MapImageBase64);
                await Task.Delay(100); 

                if (_state != null)
                {
                    foreach (var zone in _state.Zones)
                    {
                        var f = _state.Factions.FirstOrDefault(fn => fn.Name == zone.FactionName);
                        if(f != null) await JS.InvokeVoidAsync("mapTools.floodFill", (int)zone.X, (int)zone.Y, f.Color);
                    }
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("Map Render Failed: " + ex.Message);
            }
        }
    }

    private void StartDrag(UnitDto unit)
    {
        if (unit.FactionName == _gameData.MyFactionName && 
            _state.CurrentTurnFaction == _gameData.MyFactionName)
        {
            _draggingUnit = unit;
        }
    }

    private void HandleWrapperMouseMove(MouseEventArgs e)
    {
        if (_draggingUnit != null)
        {
            _draggingUnit.X = e.OffsetX;
            _draggingUnit.Y = e.OffsetY;
        }
    }

    private void HandleWrapperMouseUp() => _draggingUnit = null;

    private async Task SubmitTurn()
    {
        var response = await Http.PostAsJsonAsync($"api/Campaign/{Id}/turn", _state.Units);
        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
        }
    }

    public class GameStateDto
    {
        public List<FactionDto> Factions { get; set; } = new();
        public List<ZoneSeedDto> Zones { get; set; } = new();
        public List<UnitDto> Units { get; set; } = new();
        public List<UnitDefinitionDto> UnitDefinitions { get; set; } = new();
        public string CurrentTurnFaction { get; set; } 
        public int TurnNumber { get; set; }
    }
    public class ZoneSeedDto { public double X { get; set; } public double Y { get; set; } public string FactionName { get; set; } }
    public class UnitDto { public string DefinitionId { get; set; } public string FactionName { get; set; } public double X { get; set; } public double Y { get; set; } }
    public class UnitDefinitionDto { public string Id { get; set; } public string Name { get; set; } public string ImageBase64 { get; set; } }
}}