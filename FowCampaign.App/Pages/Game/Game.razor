@page "/game/{Id:int}"
@using System.Text.Json
@using FowCampaign.App.DTO
@using FowCampaign.App.Shared

@attribute [Authorize]

@layout HomeLayout


@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavigationManager




<PaperSheet @ref="_paper">

    @if (_isLoading)
    {
        <div style="text-align:center; padding-top: 100px; font-family: 'Courier New';">
            <h3>DECRYPTING BATTLE PLANS...</h3>
            <p>Loading Campaign #@Id</p>
        </div>
    }
    else if (_loadError)
    {
        <div style="color:red; text-align:center; padding-top: 50px;">
            <h3>MISSION ABORTED</h3>
            <p>Could not load campaign data. Server may be offline.</p>
            <button class="btn-leave" style="width:auto; padding: 10px 20px;"
                    @onclick='() => NavigationManager.NavigateTo("/home")'>RETURN TO BASE
            </button>
        </div>
    }
    else
    {
        @if (_state != null)
        {
            <div class="turn-banner" style="background-color: @GetFactionColor(_state.CurrentTurnFaction);">
                TURN @(_state.TurnNumber): @(_state.CurrentTurnFaction.ToUpper())
            </div>
        }

        <div class="game-container">

            <div class="map-panel">

                <div class="map-sticky-header">
                    <span>OP: @_gameData.Name</span>
                    <span>Playing As: <span style="color:yellow;">@_gameData.MyFactionName</span></span>
                </div>

                <div class="canvas-container" style="position: relative; width: fit-content; height: fit-content;"
                     @onmousemove="HandleWrapperMouseMove"
                     @onmouseup="HandleWrapperMouseUp">

                    <canvas id="gameCanvas" class="game-canvas" @onclick="HandleMapClick"></canvas>
                    @if (_isProcessingMap)
                    {
                        <div class="map-overlay-blocker">
                            <div class="processing-panel">
                                <div class="processing-text">UPDATING TACTICAL MAP...</div>
                                <div class="progress-track">
                                    <div class="progress-bar-moving"></div>
                                </div>
                            </div>
                        </div>
                    }
                    @if (_state != null)
                    {
                        @foreach (var unit in _state.Units)
                        {
                            var def = _state.UnitDefinitions.FirstOrDefault(d => d.Id == unit.DefinitionId);

                            var isMyUnit = unit.FactionName == _gameData.MyFactionName;
                            var isMyTurn = _state.CurrentTurnFaction == _gameData.MyFactionName;
                            var canDrag = isMyUnit && isMyTurn;

                            var dragClass = canDrag ? "unit-draggable" : "unit-locked";
                            var pointerClass = _draggingUnit != null ? "pointer-events-none" : "";

                            var factionColor = GetFactionColor(unit.FactionName);
                            var positionStyle = $"left: {unit.X}px; top: {unit.Y}px; border: 2px solid {factionColor}; box-shadow: 0 0 5px {factionColor};";

                            if (def != null)
                            {
                                <div class="map-unit @dragClass @pointerClass"
                                     style="@positionStyle"
                                     @onmousedown="() => StartDrag(unit)"
                                     @onmousedown:stopPropagation="true">

                                    <img src="@def.ImageBase64" style="width:100%; height:100%; object-fit:contain;"
                                         title="@def.Name"/>
                                </div>
                            }
                        }
                    }

                    }
                </div>
            </div>

            <div class="intel-sidebar">

                <div class="sidebar-section">
                    <h4 class="section-header">COMMAND</h4>

                    @if (_state?.CurrentTurnFaction == _gameData?.MyFactionName && _turnPhase == TurnPhase.Planning)
                    {
                        <div class="status-box status-active">
                            <strong>STATUS:</strong> Awaiting Orders
                        </div>
                        <button class="btn-full btn-confirm"
                                @onclick="() => { 
                                    _turnPhase = TurnPhase.Capture;
                                    StateHasChanged();
                                }"
                        >
                            ✔ CONFIRM MOVES
                        </button>
                    }
                    else if (_turnPhase == TurnPhase.Planning && _state?.CurrentTurnFaction != _gameData?.MyFactionName)
                    {
                        <div class="status-box status-waiting">
                            <strong>STATUS:</strong> Enemy Acting
                        </div>
                        <button class="btn-full btn-wait" disabled>
                            WAITING...
                        </button>
                    }
                    else if (_turnPhase == TurnPhase.Capture && _state?.CurrentTurnFaction == _gameData?.MyFactionName)
                    {
                        <div class="status-box status-active">
                            <strong>STATUS:</strong> Capture Phase
                        </div>
                        <button class="btn-full btn-confirm"
                                @onclick="() => { 
                                    _turnPhase = TurnPhase.Planning;
                                    StateHasChanged();
                                }"
                        >
                            BACK
                        </button>
                        <button class="btn-full btn-capture" @onclick="SubmitTurn">
                            ✔ CONFIRM CAPTURE
                        </button>
                    }


                </div>

                <div class="intel-table-container">
                    <h4 class="intel-header">TERRITORY CONTROL</h4>

                    <table class="intel-table">
                        <thead>
                        <tr>
                            <td>REGION</td>
                            <td style="text-align: right;">OWNER</td>
                        </tr>
                        </thead>
                        <tbody>
                        @if (_state != null && _state.Zones != null)
                        {
                            @foreach (var zone in _state.Zones.OrderBy(z => z.Name))
                            {
                                <tr class="intel-row">
                                    <td style="font-weight: bold; color: #333;">
                                        @(string.IsNullOrWhiteSpace(zone.Name) ? "Unknown Sector" : zone.Name)
                                    </td>
                                    <td style="text-align: right;">
                                        <span class="faction-badge"
                                              style="background-color: @GetFactionColor(zone.FactionName);">
                                            @zone.FactionName.ToUpper()
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>

                <div class="sidebar-section">
                    <button class="btn-full btn-abort" @onclick='() => NavigationManager.NavigateTo("/home")'>
                        LEAVE WAR ROOM
                    </button>
                </div>

            </div>
        </div>
    }
</PaperSheet>

@code {
    [Parameter] public int Id { get; set; }
    private PaperSheet _paper;
    private LoadGameDataDto _gameData;
    private GameStateDto _state;
    private UnitDto _draggingUnit;
    private bool _isProcessingMap = false;

    private enum TurnPhase
    {
        Planning,
        Capture,
        Processing
    }

    private TurnPhase _turnPhase = TurnPhase.Planning;
    private bool _isLoading = true;
    private bool _loadError;
    private bool _mapRendered;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _gameData = await Http.GetFromJsonAsync<LoadGameDataDto>($"api/Campaign/{Id}");

            if (!string.IsNullOrEmpty(_gameData.GameStateJson))
            {
                _state = JsonSerializer.Deserialize<GameStateDto>(_gameData.GameStateJson);

                if (string.IsNullOrEmpty(_state.CurrentTurnFaction))
                {
                    _state.CurrentTurnFaction = _state.Factions.FirstOrDefault()?.Name ?? "Axis";
                    _state.TurnNumber = 1;
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading game: {ex.Message}");
            _loadError = true;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string GetFactionColor(string factionName)
    {
        return _state?.Factions.FirstOrDefault(f => f.Name == factionName)?.Color ?? "#000000";
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!_isLoading && !_loadError && !_mapRendered && _gameData != null)
        {
            _mapRendered = true;

            try
            {
                await JS.InvokeVoidAsync("mapTools.initMap", "gameCanvas", _gameData.MapImageBase64);

                if (_state != null)
                {
                    foreach (var zone in _state.Zones)
                    {
                        var f = _state.Factions.FirstOrDefault(fn => fn.Name == zone.FactionName);
                        if (f != null) await JS.InvokeVoidAsync("mapTools.floodFillRaw", zone.X, zone.Y, f.Color);
                    }
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("Map Render Failed: " + ex.Message);
            }
        }
    }


    private void StartDrag(UnitDto unit)
    {
        if (_turnPhase != TurnPhase.Planning)
        {
            return;
        }

        if (unit.FactionName == _gameData.MyFactionName &&
            _state.CurrentTurnFaction == _gameData.MyFactionName)
        {
            _draggingUnit = unit;
        }
    }

    private void HandleWrapperMouseMove(MouseEventArgs e)
    {
        if (_draggingUnit != null)
        {
            _draggingUnit.X = e.OffsetX;
            _draggingUnit.Y = e.OffsetY;
        }
    }

    private void HandleWrapperMouseUp()
    {
        _draggingUnit = null;
    }

    private async Task SubmitTurn()
    {
        var endTurnReqestDto = new EndTurnRequestDto
        {
            Units = _state.Units,
            Zones = _state.Zones
        };
        var response = await Http.PostAsJsonAsync($"api/Campaign/{Id}/turn", endTurnReqestDto);
        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo(NavigationManager.Uri, true);
        }
    }

    private async Task HandleMapClick(MouseEventArgs e)
    {
        if (_state == null || _gameData == null || _isProcessingMap) return;

        if (_state.CurrentTurnFaction != _gameData.MyFactionName || _turnPhase != TurnPhase.Capture)
        {
            return;
        }

        _isProcessingMap = true;
        StateHasChanged();
        _turnPhase = TurnPhase.Processing;

        await Task.Delay(50);

        try
        {
            var realCoords = await JS.InvokeAsync<PaintCoord>(
                "mapTools.getSize",
                e.OffsetX,
                e.OffsetY
            );

            if (realCoords == null)
            {
                return;
            }

            ZoneSeedDto currentRegion = null;
            var distanceMin = double.MaxValue;

            foreach (var region in _state.Zones)
            {
                var distanceX = realCoords.X - region.X;
                var distanceY = realCoords.Y - region.Y;

                var distance = distanceX * distanceX + distanceY * distanceY;

                if (distanceMin > distance)
                {
                    distanceMin = distance;
                    currentRegion = region;
                }
            }

            double maxDistanceSquared = 250 * 250;

            if (currentRegion != null && distanceMin < maxDistanceSquared)
            {
                Console.WriteLine($"DEBUG: Trafiono region {currentRegion.Name}. Rozpoczynam kolorowanie...");

                currentRegion.FactionName = _gameData.MyFactionName;
                var myFactionColor = GetFactionColor(_gameData.MyFactionName);

                await JS.InvokeVoidAsync("mapTools.floodFillRaw", (int)currentRegion.X, (int)currentRegion.Y, myFactionColor);

                _state.Zones = _state.Zones.Select(z =>
                    z.X == currentRegion.X && z.Y == currentRegion.Y
                        ? new ZoneSeedDto { X = z.X, Y = z.Y, FactionName = currentRegion.FactionName, Name = z.Name }
                        : z
                ).ToList();
            }
        }

        catch (Exception ex)
        {
            Console.WriteLine($"Coloring Error: {ex.Message}");
        }
        finally
        {
            _isProcessingMap = false;
            _turnPhase = TurnPhase.Capture;
            StateHasChanged();
        }
    }

    public class PaintCoord
    {
        public double X { get; set; }
        public double Y { get; set; }
    }


}
